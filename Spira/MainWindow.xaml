        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Height="40" Content="Extract Files" Click="OnExtractFilesClick"/>
        <Button Height="40" Content="Convert Ev" Click="OnConvertEvClick"/>
        <Button Height="40" Content="Convert Scene"/>
        <Button Height="40" Content="Convert Ftcx" Click="OnConvertFtcxClick"/>
        <Button Height="40" Content="Calc PS2 Hash" Click="OnCalcPS2Hash"/>
        <Button Height="40" Content="Calc PS3 Hash" Click="OnCalcPS3Hash"/>
        <Button Height="40" Content="PreBuild Indices" Click="OnPreBuildIndices"/>
    </StackPanel>
</Window>
